<launch>
  <!-- Odometry from laser scans -->
  <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen">

    <!-- Frame names -->
    <param name="map_frame" value="map" />
    <param name="odom_frame" value="odom" />
    <param name="base_frame" value="base_link" />
    <param name="tf_map_scanmatch_transform_frame_name" value="base_link" />

    <!-- Tf use -->
    <param name="pub_map_odom_transform" value="true"/>
    <param name="pub_map_scanmatch_transform" value="false"/>

    <!-- Map size / start point -->
    <param name="map_resolution" value="0.05"/>
    <param name="map_size" value="2048"/>
    <param name="map_multi_res_levels" value="5" />

    <!-- Map update parameters -->
    <param name="map_update_angle_thresh" value="0.05" />
    <param name="map_update_distance_thresh" value="0.1" />
    <param name="map_pub_period" value="1.0" />

    <!-- Advertising config -->
    <param name="scan_topic" value="/scan"/>

    <param name="laser_min_dist" value="0.1"/>
    <param name="laser_max_dist" value="30.0"/>
    <param name="laser_z_min_value" value="-1.0"/>
  </node>

</launch>
